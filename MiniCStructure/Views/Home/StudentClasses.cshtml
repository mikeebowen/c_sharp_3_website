@model IEnumerable<MiniCStructure.Models.Class>

@{
    ViewBag.Title = "StudentClasses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>StudentClasses</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassDescription)
        </td>
        <td>
            @string.Format("{0:C}", item.ClassPrice)
        </td>
    </tr>
}

</table>
